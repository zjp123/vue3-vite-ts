        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "noLib": false,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "strictFunctionTypes": false,
        "jsx": "preserve",
        "baseUrl": ".",
        "allowJs": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "lib": ["dom", "esnext"],
        "noImplicitAny": false,
        "skipLibCheck": true,
        "types": ["vite/client"],
        "removeComments": true,
        "paths": {
            "@/*": ["src/*"],
            "/#/*": ["types/*"]
        },
        "typeRoots": ["./node_modules/@types", "types", "src/**/*.d.ts"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "global.d.ts",
        "typings.d.ts",
        "typings/**/*",
        "./auto-imports.d.ts",
        "types/env.d.ts",
        "types/extendProperties.d.ts"
    ],
    "exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
